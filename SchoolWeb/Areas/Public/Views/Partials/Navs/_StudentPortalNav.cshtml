
@model string;

@{ 
    string isActive(string pageName)
    {
        if (pageName==Model)
        {
            return "activeContainer";
        }
        return "";
    }
} 
<div class="col-lg-6 col-md-6 navigation">
    <div class="navContainer">
        <!----------------------------- navigation header --------------------------->
        <div class="mainContainer">
            <p>بوابة الطالب</p>
        </div>

        <!----------------------------- navigation items --------------------------->

        <div class="subContainer @isActive("profile")">
            <p>
                <a asp-area="Student" asp-controller="Home" asp-action="Index">
                    الصفحة الشحصية
                </a>
            </p>
        </div>


        <div class="subContainer @isActive("News")">
            <p>
                <a asp-area="Public" asp-controller="AboutSchool" asp-action="News">
                    الأخبار
                </a>
            </p>
        </div>


        <div class="subContainer @isActive("Teachers")">
            <p>
                <a asp-area="Public" asp-controller="AboutSchool" asp-action="Teachers">
                     الهيئة التدريسية     
                </a>
            </p>
        </div>

        <div class="subContainer @isActive("AboutUs")">
            <p>
                <a asp-area="Public" asp-controller="AboutSchool" asp-action="AboutUS">
                    نبذة عنا
                </a>
            </p>
        </div>
    </div>
</div>

