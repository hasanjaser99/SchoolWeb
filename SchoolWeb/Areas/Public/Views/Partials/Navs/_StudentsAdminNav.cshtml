@model string

@{
    string isActive(string pageName)
    {
        if (pageName == Model)
        {
            return "activeContainer";
        }
        return "";
    }
}

<div class="navContainer">
    <div class="mainContainer">
        <p>الطلاب</p>
    </div>

    <div class="subContainer @isActive("studentsInfo")">
        <p>
            <a asp-area="Admin" asp-controller="Students" asp-action="StudentsInfo">
                بيانات الطلاب
            </a>
        </p>
    </div>



    <div class="subContainer @isActive("registerRequests")">
        <p>
            <a asp-area="Admin" asp-controller="Students" asp-action="RegisterRequests">
                طلبات التسجيل
            </a>
        </p>
    </div>

    <div class="subContainer @isActive("finicialClaims")">
        <p>
            <a asp-area="Admin" asp-controller="Students" asp-action="">
                المطالبات المالية
            </a>
        </p>
    </div>

</div>