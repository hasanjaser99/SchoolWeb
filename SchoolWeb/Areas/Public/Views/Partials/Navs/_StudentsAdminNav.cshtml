@model string

@{
    string isActive(string pageName)
    {
        if (pageName == Model)
        {
            return "activeContainer";
        }
        return "";
    }
}

<div class="navContainer">
    <div class="mainContainer">
        <p>الطلاب</p>
    </div>

    <div class="subContainer @isActive("studentsInfo")">
        <p>
            <a asp-area="Admin" asp-controller="CoursesAndSections" asp-action="Courses">
                بيانات الطلاب
            </a>
        </p>
    </div>



    <div class="subContainer @isActive("registerOrders")">
        <p>
            <a asp-area="Admin" asp-controller="CoursesAndSections" asp-action="Sections">
                طلبات التسجيل
            </a>
        </p>
    </div>

    <div class="subContainer @isActive("finicialClaims")">
        <p>
            <a asp-area="Admin" asp-controller="CoursesAndSections" asp-action="Sections">
                المطالبات المالية
            </a>
        </p>
    </div>

</div>