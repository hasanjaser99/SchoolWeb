@model IEnumerable<Mark>
@using SchoolWeb.Utility


<table id="marksTable" align="right" class="table table-bordered mt-5 mb-5 col-12">
    <tr>
        <th>
            <span>المجموع</span>
        </th>
        <th>
            <span>النهائي</span>
        </th>
        <th>
            <span>المشاركة</span>
        </th>
        <th>
            <span>الشهر الثاني</span>
        </th>
        <th>
            <span>الشهر الأول</span>
        </th>
        <th>
            <span>المادة / العلامة</span>
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr >
            <td colspan="6">لا يوجد علامات </td>
        </tr>

    }
    else
    {
        @foreach (var mark in Model)
         {
            <tr id="@mark.Id">
                <td>
                    @(mark.FinalMark+ mark.AssignmentsMark+ mark.SecondMark+ mark.FirstMark)
                    <span>/100</span>
                </td>

                <td>@mark.FinalMark<span> / 40</span></td>

                <td>@mark.AssignmentsMark<span> / 20</span></td>

                <td>@mark.SecondMark<span> / 20</span></td>

                <td>@mark.FirstMark<span> / 20</span></td>

                <th>
                    <span>@mark.Course.Name</span>
                </th>

            </tr>



         }
    }
</table>

