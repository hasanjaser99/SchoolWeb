@model string

@{
    string isActive(string pageName)
    {
        if (pageName == Model)
        {
            return "activeContainer";
        }
        return "";
    }
}

<div class="navContainer">
    <div class="mainContainer">
        <p>التسجيل و الرسوم</p>
    </div>

    <div class="subContainer @isActive("regDetails")">
        <p>
            <a asp-area="Public" asp-controller="FeesAndRegisteration" asp-action="RegisterationDetails">
                تفاصيل التسجيل
            </a>
        </p>
    </div>



    <div class="subContainer @isActive("schoolFees")">
        <p>
            <a asp-area="Public" asp-controller="FeesAndRegisteration" asp-action="SchoolFees">
                الرسوم
            </a>
        </p>
    </div>


    <div class="subContainer @isActive("register")">
        <p>
            <a asp-area="Public" asp-controller="FeesAndRegisteration" asp-action="Register">
                تسجيل الطالب
            </a>
        </p>
    </div>




</div>