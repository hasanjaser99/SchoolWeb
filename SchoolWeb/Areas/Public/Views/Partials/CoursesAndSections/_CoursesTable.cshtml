@model IEnumerable<Course>
@using SchoolWeb.Utility

<table id="tblData" align="right" class="table table-bordered mt-5">
    <tr>
        <th></th>
        <th>
            <span>المعلمون</span>
        </th>
        <th>
            <span>الفصل الدراسي</span>
        </th>
        <th>
            <span>إسم المادة</span>
        </th>
    </tr>
    @foreach (var course in Model)
    {
        <tr id="@course.Id">
            <td>
                <span class="tableActionButtons">
                    <a class="deleteButton btn p-sm-0" onclick="DeleteCourse(`@course.Id`)">
                        <p class="text-white font-weight-bold mt-1">حذف</p>
                    </a>
                    <a class="editButton btn p-sm-0"
                       asp-action="UpsertCourse" asp-route-id="@course.Id">
                        <p class="green-font font-weight-bold mt-1">تعديل</p>
                    </a>
                </span>
            </td>
            <td>
                @{
                    foreach (var item in course.CourseTeachers)
                    {
                        <p>@item.Teacher.Name</p>
                    }
                }
            </td>
            <td>@StaticFunctions.GetSemester(course.Semester)</td>
            <td>@course.Name</td>

        </tr>


    }
</table>

