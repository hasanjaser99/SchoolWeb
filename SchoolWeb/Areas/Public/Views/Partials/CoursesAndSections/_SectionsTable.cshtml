@model IEnumerable<Section>
@using SchoolWeb.Utility

<table id="tblData" align="right" class="table table-bordered mt-5">
    <tr>
        <th></th>
        <th>
            <span>الجدول الدراسي</span>
        </th>
        <th>
            <span>عدد طلاب الشعبة</span>
        </th>
        <th>
            <span>مربي الصف</span>
        </th>
        <th>
            <span>إسم الشعبة</span>
        </th>
    </tr>
    @foreach (var Section in Model)
    {
        <tr id="@Section.Id">
            <td>
                <span class="tableActionButtons">
                    <a class="deleteButton btn p-sm-0" onclick="DeleteSection(`@Section.Id`)">
                        <p class="text-white font-weight-bold mt-1">حذف</p>
                    </a>
                    <a class="editButton btn p-sm-0"
                       asp-action="UpsertSection" asp-route-id="@Section.Id">
                        <p class="green-font font-weight-bold mt-1">تعديل</p>
                    </a>
                </span>
            </td>
            <td>
                <span class="tableActionButtons">
                    <a class="editButton btn p-sm-0"
                       asp-action="Classes" asp-route-sectionId="@Section.Id">
                        <p class="green-font font-weight-bold mt-1">عرض</p>
                    </a>
                </span>
            </td>
            <td>@Section.Students.Count()</td>
            <td>@Section.Teacher.Name</td>
            <td>@Section.Name</td>


        </tr>


    }
</table>

