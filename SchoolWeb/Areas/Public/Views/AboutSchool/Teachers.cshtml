
@model IEnumerable<SchoolWeb.Models.Teacher>

@section Css {
    <link rel="stylesheet" href="~/css/AboutSchool/AboutSchoolNav.css" />
}


@{
    ViewData["Title"] = "الهيئة التدريسية ";
    ViewData["Active"] = "aboutSchool";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pageTitle = "Teachers";
}

<div class="mt-5" >
    <div class="row flex-sm-row-reverse" >

        <div class="col-lg-6 col-md-6 center " >
            <img src="~/SVGs/schoolLogo.svg" width="200px" height="200px" />

        </div>
        <partial name="~/Areas/Public/Views/Partials/Navs/_AboutSchoolNav.cshtml"
                 for="@pageTitle" />

    </div>
</div>




<div class="mt-5">
    <p style="font-weight: bold; margin-top: 50px; border-bottom: 2px solid #038242; display: inline-block;">
        الهيئة التدريسية
    </p>

    <div class=" row flex-row-reverse mt-4 mb-sm-5 mt-5 " style="display:flex; justify-content:space-between;">
        @foreach(var teacher in Model)
        {
        <partial name="~/Areas/Public/Views/Partials/Cards/_TeacherCard.cshtml" for="@teacher"/>
        }
   

    </div>
</div>
