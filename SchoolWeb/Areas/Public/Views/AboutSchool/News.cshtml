@section Css {
    <link rel="stylesheet" href="~/css/AboutSchool/AboutSchoolNav.css" />
}

@model IEnumerable<SchoolWeb.Models.News>

@{
    ViewData["Title"] = "عن الروضة";
    ViewData["Active"] = "aboutSchool";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pageTitle = "News";
}

<div class="mt-5">
    <div class="row flex-sm-row-reverse">

        <div class="col-lg-6 col-md-6 center ">
            <img src="~/SVGs/schoolLogo.svg" width="200px" height="200px" />

        </div>
        <partial name="~/Areas/Public/Views/Partials/_AboutSchoolNav.cshtml"
                 for="@pageTitle" />
     
    </div>
</div>


<div class="mt-5">
    <p style="font-weight: bold; margin-top: 50px; border-bottom: 2px solid #038242; display: inline-block;">
        اخبار الروضة
    </p>

    <div class=" row mt-4 mb-sm-5">
        @{
            foreach (var news in Model)
            {
                <partial  name="~/Areas/Public/Views/Partials/_NewsCard.cshtml" for="@news" />

            }
        }
    </div>
</div>
