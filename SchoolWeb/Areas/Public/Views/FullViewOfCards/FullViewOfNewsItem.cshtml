
@model SchoolWeb.Models.News

@using SchoolWeb.Utility
@{
    ViewData["Title"] = "الرئيسية";
    ViewData["Active"] = "home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imagesArray = Model.NewsImages.ToArray();
}
<div class=" row center">
    <div class=" row flex-row-reverse col-10 pb-5 pt-5 mt-5 mb-sm-5 shadow " style="border:2px solid #038242; border-radius:8px;">


        <div id="carouselExampleControls"
             class="carousel slide slider center col-lg-4"
             style="height:220px; width:220px" ;
             data-ride="carousel">
            <div class="carousel-inner">

                @for (int i = 0; i < imagesArray.Length; i++)
                {
                <div class=" carousel-item  @((i==0)?"active":"") ">
                    <img src="@imagesArray[i].ImageUrl" height="220" width="220" />
                </div>
                }

               



            </div>
            
        </div>


        <!----------------------- img container ------------------------------->
        <!----------------------- profile content container ------------------------------->
        <div class="col-lg-6 center mt-sm-3 mt-lg-0" style=" justify-content:flex-end">
            <div>
                <p class="font-weight-bold">@Model.Title</p>
                <p class="font-weight-bold">@Model.Description</p>
                <p class="text-black-50">@Model.Date.ToString("dd/MM/yyyy")</p>

            </div>
        </div>

    </div>

</div>


@section Scripts{
    <script src="~/js/cardsSlider.js"></script>
}

