@model SchoolWeb.Models.ViewModels.AdminStudentDetailsVM
@using SchoolWeb.Utility

@section Css {
    <link rel="stylesheet" href="~/css/AdminStudents/StudentDetails.css" />
}

@{
    ViewData["Title"] = "تفاصيل الطالب";
    ViewData["Active"] = "management";
}

<div class="mt-5">
    <input type="hidden" asp-for="@Model.Student.Id" id="studentId" />
    <div class="row">
        <div class="col-12">
            <h2 class="bold">البيانات الشخصية</h2>
        </div>
    </div>
    <div class="row flex-row-reverse mt-4">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <img src="~/images/students/0ae51d97-8c6d-4932-a65d-ca510e40a2e1.jpg"
                 height="120%" width="80%" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="row flex-row-reverse">
                <span class="bold"> : الإسم باللغة العربية</span>
                &nbsp;
                <span> @Model.Student.ArabicName </span>
            </div>
            <div class="row flex-row-reverse">
                <span class="bold"> : الإسم باللغة الإنجليزية</span>
                &nbsp;
                <span>@Model.Student.EnglishName</span>
            </div>
            <div class="row flex-row-reverse">
                <span class="bold"> : الصف</span>
                &nbsp;
                <span>@StaticFunctions.GetGrade(Model.Student.Grade)</span>
            </div>
            <div class="row flex-row-reverse">
                <span class="bold"> : المواصلات</span>
                &nbsp;
                <span>@StaticFunctions.getBussState(Model.Student.BussState)</span>
            </div>
            <div class="row flex-row-reverse">
                <span class="bold"> : رقم هاتف ولي الأمر</span>
                &nbsp;
                <span>@Model.Student.ParentPhoneNumber</span>
            </div>
            <div class="row flex-row-reverse">
                <span class="bold"> : العنوان</span>
                &nbsp;
                <span>@Model.Student.Address</span>
            </div>
        </div>
    </div>

    <div class="row flex-row-reverse mt-5">
        <div class="col-12 mt-5">
            <h2 class="bold mt-5 mb-1">علامات الطالب</h2>
            <br /><br />
            <div class="d-flex justify-content-end">
                @Html.DropDownListFor(m => m.SelectedSemester, Model.Semesters,
               new
               {
                   @class = "form-control",
                   @onchange = "PopulateMarks()",
                   style = "text-align-last:right; width:40%",
                   id = "Semesters"
               })
            </div>

            <div id="table">
                <partial name="~/Areas/Public/Views/Partials/AdminStudents/_StudentMarksTable.cshtml" ,
                         model="@Model.Marks" />
            </div>
        </div>
    </div>


    @{
        double paidAmmout = 0;
        double unPaidAmmout = 0;
    }
    <div class=" row flex-row-reverse mt-5 mb-3 pt-5">

        <!--------------------------------- table col --------------------------------------->
        <div class="row flex-row-reverse col-12 feesDetails">


            <div class="col-md-5 col-sm-10 ">
                <h2 class="bold mt-4 mb-1">الوضع المالي للطالب</h2>

                <table align="right" class="table table-bordered mt-5" style="width:100%">
                    <tr>
                        <th>
                            <span>الحالة</span>
                        </th>
                        <th>
                            <span>المبلغ</span>
                        </th>
                        <th>
                            <span>الشهر</span>
                        </th>
                    </tr>
                    @foreach (var item in Model.MonthlyPayments)
                    {
                        var ammount = item.SchoolFeesAmount + item.BusFeesAmount;
                        string status;
                        if (item.IsPaied)
                        {
                            paidAmmout = paidAmmout + ammount;
                            status = "مدفوع";
                        }
                        else
                        {
                            unPaidAmmout = unPaidAmmout + ammount;
                            status = "غير مدفوع";
                        }
                        <tr>
                            <td>
                                <span class="d-inline-block">@status</span>
                            </td>
                            <td>
                                <span class="d-inline-block">دينار</span>
                                <span class="d-inline-block">@ammount</span>
                            </td>
                            <td>
                                <span class="d-inline-block">@item.Month</span>
                            </td>

                        </tr>
                    }
                </table>
            </div>


            <div class="ml-4 pb-5 col-md-5 col-sm-10 center  mt-2">
                <table>
                    <tr>
                        <th>
                            <span class="d-inline-block font-weight-bold">دينار</span>
                        </th>
                        <th>
                            <span class="d-inline-block font-weight-bold">@paidAmmout</span>
                        </th>
                        <th>
                            <span class="d-inline-block green-font mr-2"
                                  style="font-weight:bold;font-size:18px ">:</span>
                        </th>
                        <th>
                            <span class="d-inline-block green-font mr-2"
                                  style="font-weight:bold;font-size:18px "> اجمالي المدفوع</span>
                        </th>

                    </tr>

                    <tr>
                        <th>
                            <span class="d-inline-block font-weight-bold">دينار</span>
                        </th>
                        <th>
                            <span class="d-inline-block font-weight-bold">@unPaidAmmout</span>
                        </th>
                        <th>
                            <span class="d-inline-block mr-2"
                                  style="font-weight:bold;font-size:18px; color:#ff3232">: </span>
                        </th>
                        <th>
                            <span class="d-inline-block mr-2"
                                  style="font-weight:bold;font-size:18px; color:#ff3232">
                                المبلغ المتبقي
                            </span>
                        </th>

                    </tr>
                </table>


            </div>



        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/admin-studentMarks.js"></script>
}

