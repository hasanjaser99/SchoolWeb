@model IEnumerable<SelectListItem>
@using SchoolWeb.Utility

@section Css {
    <link rel="stylesheet" href="~/css/AdminStudents/AdminStudentsNav.css" />
    <link rel="stylesheet" href="~/css/AdminStudents/StudentsInfo.css" />
}

@{
    ViewData["Title"] = "المطالبات المالية";
    ViewData["Active"] = "management";
    string activeNav = "finicialClaims";
}


<div class="mt-5">
    <div class="row pb-3">
        <div class="col-lg-6 col-md-6">
            <partial name="~/Areas/Public/Views/Partials/Navs/_StudentsAdminNav.cshtml" model="activeNav" />
        </div>
        <div class="schoolLogo col-lg-6 col-md-6">
            <img src="~/SVGs/schoolLogo.svg" width="200px" height="200px" />

        </div>
    </div>

    <div class="row flex-row-reverse mt-5">
        <div class="col-3" style="display:flex;justify-content:flex-end">
            <select id="Grades" class="form-control" style="text-align-last: right;" onchange="PopulateClaims()">

                @foreach (var grade in Model)
                {
                    <option value="@grade.Value" label="@grade.Text" selected="@grade.Selected"></option>
                }
            </select>
        </div>
    </div>

    <div class="row flex-row-reverse">
        <div class="studentsTable col-12 mt-1">

            <div id="table">
                <br />
                <br />
                <table id="tblData" align="right" class="table table-bordered mt-5 dt-responsive">
                    <thead>
                        <tr>
                            <th>
                                <span>عرض التفاصيل</span>
                            </th>
                            <th>
                                <span>المبلغ المطلوب</span>
                            </th>
                            <th>
                                <span>رقم هاتف ولي الأمر</span>
                            </th>
                            <th>
                                <span>الشعبة</span>
                            </th>
                            <th>
                                <span>الإسم باللغة العربية</span>
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-financialClaims.js"></script>
}



