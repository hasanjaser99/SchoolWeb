
@model IEnumerable<SchoolWeb.Models.MonthlyPayment>

@section Css {
    <link rel="stylesheet" href="~/css/AboutSchool/AboutSchoolNav.css" />
    <link rel="stylesheet" href="~/css/studentPortal/SchoolFees.css" />
}


@{
    ViewData["Title"] = "الوضع المالي";
    ViewData["Active"] = "studentPortal";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pageTitle = "AccountStatment";
}

<div class=" row mt-5  center ">
    <div class="row col-11 flex-sm-row-reverse">

        <div class="col-lg-6 col-md-6 ">
            <p class="green-font font-weight-bold" style="font-size:18px;">:الوضع المالي</p>

            <img src="~/images/fees.jpg" width="220" height="220" class="mt-5" />

        </div>
        <partial name="~/Areas/Public/Views/Partials/Navs/_StudentPortalNav.cshtml"
                 for="@pageTitle" />

    </div>
</div>




@{ 
    double paidAmmout = 0;
    double unPaidAmmout = 0;
}
<div class=" row flex-row-reverse mt-5 mb-3 pt-5 center">

    <!--------------------------------- table col --------------------------------------->
    <div class="row flex-row-reverse col-12 feesDetails center">


        <div class="col-md-5 col-sm-10 ">
            <table align="right" class="table table-bordered mt-5">
                <tr>
                    <th>
                        <span>الحالة</span>
                    </th>
                    <th>
                        <span>المبلغ</span>
                    </th>
                    <th>
                        <span>الشهر</span>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    var ammount = item.SchoolFeesAmount + item.BusFeesAmount;
                    string status;
                    if (item.IsPaied)
                    {
                        paidAmmout = paidAmmout + ammount;
                        status = "مدفوع";
                    }
                    else
                    {
                        unPaidAmmout = unPaidAmmout + ammount;
                        status = "غير مدفوع";
                    }
                    <tr>
                        <td>
                            <span class="d-inline-block">@status</span>
                        </td>
                        <td>
                            <span class="d-inline-block">دينار</span>
                            <span class="d-inline-block">@ammount</span>
                        </td>
                        <td>
                            <span class="d-inline-block">@item.Month</span>
                        </td>

                    </tr>
                }
            </table>
        </div>


        <div class="ml-4 pb-5 col-md-5 col-sm-10 center  mt-2">
            <table>
                <tr>
                    <th>
                        <span class="d-inline-block font-weight-bold">دينار</span>
                    </th>
                    <th>
                        <span class="d-inline-block font-weight-bold">@paidAmmout</span>
                    </th>
                    <th>
                        <span class="d-inline-block green-font mr-2"
                              style="font-weight:bold;font-size:18px ">:</span>
                    </th>
                    <th>
                        <span class="d-inline-block green-font mr-2"
                              style="font-weight:bold;font-size:18px "> اجمالي المدفوع</span>
                    </th>

                </tr>

                <tr>
                    <th>
                        <span class="d-inline-block font-weight-bold">دينار</span>
                    </th>
                    <th>
                        <span class="d-inline-block font-weight-bold">@unPaidAmmout</span>
                    </th>
                    <th>
                        <span class="d-inline-block mr-2"
                              style="font-weight:bold;font-size:18px; color:#ff3232">: </span>
                    </th>
                    <th>
                        <span class="d-inline-block mr-2"
                              style="font-weight:bold;font-size:18px; color:#ff3232">
                            المبلغ المتبقي
                        </span>
                    </th>

                </tr>
            </table>
            

        </div>



    </div>
</div>
   
  

    
